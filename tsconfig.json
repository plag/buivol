{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": false,
    "noImplicitAny": false
  },
  "compileOnSave": false,
  "filesGlob": [
    "./app/**/*.ts",
    "./app/**/*.tsx",
    "!node_modules/**",
    "!typings/**"
  ]
}
